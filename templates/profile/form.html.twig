{% extends 'base.html.twig' %}

{% form_theme EditProfileForm 'bootstrap_4_layout.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<main>
    <div class="main-section">
        <div class="container-bv">
            <div class="main-section-data page-content">
                <div class="row">
                    <div class="col-lg-3">

                        {% include 'profile/boxes/infoProfile.html.twig' %}

                    </div>
                    <div class="col-lg-6">
                        <div class="main-ws-sec">
                            <div class="product-feed-tab current" id="info-dd">
                                <div class="user-profile-ov page-title sign_in_sec current page-title">
                                    <h3>Modifier mes informations</h3>

                                    {{ form_start(EditProfileForm, {'attr':{'id':'BVform'}}) }}
                                        <div class="form-row">
                                            <div class="form-group required col-lg-6 col-md-12">
                                                {{ form_row(EditProfileForm.lastname) }}
                                            </div>

                                            <div class="form-group required col-lg-6 col-md-12">
                                                {{ form_row(EditProfileForm.firstname) }}
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-lg-12 col-md-12">
                                                {{ form_row(EditProfileForm.introduction) }}
                                            </div>
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group required col-lg-6 col-md-12">
                                                {{ form_row(EditProfileForm.gender) }}
                                            </div>
                                            <div class="form-group required col-lg-6 col-md-12">
                                                {{ form_row(EditProfileForm.function) }}
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-lg-12 col-md-12">
                                                {{ form_row(EditProfileForm.jobTitle) }}
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group required col-lg-6 col-md-12">
                                                {{ form_row(EditProfileForm.mobileNumber) }}
                                            </div>
                                            <div class="form-group  col-lg-6 col-md-12">
                                                {{ form_row(EditProfileForm.phoneNumber) }}
                                            </div>
                                        </div>

                                        <div class="text-center hide-load">
                                            <div class="spinner-border" role="status">
                                                <span class="sr-only">Loading...</span>
                                            </div>
                                        </div>

                                        <div class="form-actions form-group text-center">
                                            <button  type="submit" class="m-orange-btn">Enregistrer</button>
                                        </div>
                                    {{ form_end(EditProfileForm) }}

                                </div><!--user-profile-ov end-->
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3">
                        {% include 'default/boxes/add-service-component.html.twig' %}
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('image') }}
{% endblock %}