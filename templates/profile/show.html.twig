{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <main>
        <div class="main-section">
            <div class="container">
                <div class="main-section-data page-content">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="main-left-sidebar">
                                <div class="user_profile">
                                    <div class="user-pro-img">
                                        {% if profile.filename %}
                                            <img src="{{ vich_uploader_asset(profile, 'imageFile')|imagine_filter('square') }}"  alt="">
                                        {% else %}
                                            <img src="http://via.placeholder.com/170x170" alt="">
                                        {% endif %}
                                        <a href="#" title=""><i class="fa fa-camera"></i></a>
                                    </div><!--user-pro-img end-->
                                    <div class="user_pro_status">
                                        <ul class="flw-hr">
                                            {% if profile.user == app.user  %}

                                                <li><a href="{{ path('profile_edit', {'id': profile.id}) }}" title="" class="flww">
                                                        Modifier profil</a></li>
                                            {% else %}

                                            <li><a href="#" title="" class="flww"> Ajouter au favoris</a></li>
                                            {% endif %}
                                        </ul>

                                    </div><!--user_pro_status end-->
                                    <ul class="social_links">
                                        <li><i class="fas fa-map-marker-alt"></i> Les clayes sous bois</li>
                                        <li><i class="fas fa-mobile-alt"></i>  0112345678</li>
                                        <li><i class="fas fa-external-link-alt"></i> http://www.Test.com</li>

                                    </ul>
                                </div><!--user_profile end-->

                                {% if collegues != null %}
                                    <div class="suggestions full-width">
                                        <div class="sd-title page-title sign_in_sec current">
                                            <h3>Ils travaillent dans la même entreprise</h3>

                                        </div><!--sd-title end-->
                                        <div class="suggestions-list">
                                            {% for collegue in collegues %}
                                                <div class="suggestion-usd">

                                                    {% if collegue.profile.filename %}
                                                        <img src="{{ vich_uploader_asset(collegue.profile, 'imageFile')|imagine_filter('square') }}"  alt="">
                                                    {% else %}
                                                        <img src="http://via.placeholder.com/170x170" alt="">
                                                    {% endif %}
                                                    <div class="sgt-text">
                                                        <h4>{{ collegue.profile.firstname|capitalize }} {{ profile.lastname|capitalize }}</h4>
                                                        {% if collegue.profile.function != null %}
                                                           <span>{{ collegue.profile.function.name|capitalize }}</span>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% endfor %}

                                            <div class="view-more">
                                                <a href="{{ path('company_show', {'slug': profile.user.company.slug}) }}" title="">Voir plus</a>
                                            </div>
                                        </div><!--suggestions-list end-->
                                    </div><!--suggestions end-->

                                {% endif %}
                            </div><!--main-left-sidebar end-->
                        </div>
                        <div class="col-lg-6">
                            <div class="main-ws-sec">
                                <div class="user-tab-sec">
                                    <h3>{{ profile.firstname|capitalize }} {{ profile.lastname|capitalize }}</h3>
                                    <div class="star-descp">
                                        {% if profile.function %}
                                        <span>{{ profile.function.name|capitalize}}
                                            chez
                                                {% if profile.user.company != null %}
                                                  {{ profile.user.company.name|capitalize}}
                                                    {% else  %}
                                                        {{ profile.user.store.name|capitalize}}
                                                {% endif %}

                                        </span>
                                        {% endif %}


                                    </div><!--star-descp end-->

                                </div><!--user-tab-sec end-->

                                <div class="product-feed-tab current" id="info-dd">
                                    <div class="user-profile-ov page-title sign_in_sec current">
                                        <h3>
                                            <a href="#" title="" class="overview-open">
                                                {{ profile.firstname|capitalize }} en quelque mot</a>
                                        </h3>
                                        <p>{{ profile.introduction|raw ?: 'Pas d\'introduction' }}</p>
                                    </div><!--user-profile-ov end-->
                                    {% if profile.user.company %}
                                        <div class="user-profile-ov st2 page-title sign_in_sec current">
                                            <h3><a href="#" title="" class="exp-bx-open">
                                                    {{ profile.firstname|capitalize }} travaille chez {{ profile.user.company.name }} </a>
                                            </h3>

                                            <p>{{ profile.user.company.introduction ?? 'Aucune introduction saisie' }} </p>
                                        </div><!--user-profile-ov end-->
                                    {% endif %}

                                    {% if  countServices > 0 %}
                                    <div class="top-profiles">
                                        <div class="pf-hd page-title sign_in_sec current">
                                            <h3>{{ countServices }} Services Bureau Vallée</h3>
                                            <i class="la la-ellipsis-v"></i>
                                        </div>
                                        <div class="profiles-slider">
                                            {% for service in services %}
                                                <div class="user-profy">

                                                    {% if service.filename %}
                                                        <img src="{{ vich_uploader_asset(service, 'imageFile') }}"  alt="">
                                                    {% else %}
                                                        <img src="http://via.placeholder.com/57x57" alt="">
                                                    {% endif %}
                                                    <p style="min-height: 76px">{{ service.description|slice(0, 50) ~ '...' }}</p>
                                                    <a href="#" title="">Voir plus</a>
                                                </div><!--user-profy end-->
                                            {% endfor %}

                                        </div><!--profiles-slider end-->
                                    </div><!--top-profiles end-->
                                    {% endif %}

                                    <div class="user-profile-ov st2 page-title sign_in_sec current">
                                        <h3>
                                            <a href="#" title="" class="exp-bx-open">La communauté a recommandé les services de {{ profile.firstname|capitalize }} </a>
                                        </h3>
                                        {% if recommandations %}
                                            {% for recommandation in recommandations %}
                                                <div class="suggestion-usd">
                                                    {% if profile.filename %}
                                                        <img src="{{ vich_uploader_asset(recommandation.user.profile, 'imageFile') }}" alt="">
                                                    {% else %}
                                                        <img src="http://via.placeholder.com/35x35" alt="">
                                                    {% endif %}

                                                    <div class="sgt-text">
                                                        <h4>{{recommandation.user.profile.lastname|capitalize }} {{recommandation.user.profile.firstname|capitalize }}</h4>

                                                    </div>
                                                    <p style="float: left;position: relative;left: 11px;top: -10px;width: 84%;">
                                                       {{ recommandation.message  }}
                                                    </p>

                                                </div>
                                            {% endfor %}
                                            {% else %}
                                                <p>Aucune recommandation pour l'instant</p>
                                        {% endif %}




                                    </div><!--user-profile-ov end-->




                                </div>

                            </div><!--main-ws-sec end-->
                        </div>
                        <div class="col-lg-3">
                            <div class="right-sidebar">
                                <div class="message-btn">
                                    <a href="{{ path('chat_private', {'id': profile.user.id}) }}" title=""><i class="fa fa-comments"></i> Contacter</a>
                               </div>
                                <div class="widget widget-jobs">
                                    <div class="user-profile-ov page-title sign_in_sec current" style="margin-top:36px">
                                        <h3>
                                            participez à la vie de votre communauté !
                                        </h3>
                                        <p>Soyez parmi ceux qui pensent à la communauté en proposant des offres exclusives Beev'Up à vos services
                                            et gagnez en visibilité ainsi que des points Bureau Vallée !</p>
                                        <div class="lt-sec">
                                            <a href="{{ path('service_new') }}" title="">Je créer un service</a>
                                        </div>
                                    </div><!--user-profile-ov end-->
                                </div><!--widget-jobs end-->
                            </div><!--right-sidebar end-->
                        </div>
                    </div>
                </div><!-- main-section-data end-->
            </div>
        </div>
    </main>
{% endblock %}

