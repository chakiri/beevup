{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <section id="profile" class="mt-5">
        <div class="container">
            <div class="box">
                <div class="row">
                    <div class="col-4">
                        <div class="box-image">
                            {% if profile.photo is empty %}
                                <img src="/images/default_user.png" class="img-fluid" alt="">
                            {% else %}
                                <img src="/images/profil/photo/{{ profile.photo }}" class="img-fluid" alt="">
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="info">
                            <h2>{{ profile.firstname|capitalize }} {{ profile.lastname|capitalize }}</h2>
                            {% if profile.function %}
                              <p><i class="fa fa-user-o"></i> <strong>{{ profile.function.name ?: 'Fonction non saisie'}}</strong></p>
                              {% endif %}
                            <p><i class="fa fa-map-marker"></i> {{ profile.user.store.name }}</p>
                            <p><i class="fa fa-phone"></i> {{ profile.phoneNumber ?: 'non saisi' }}</p>
                            <a href="{{ path('profile_edit', {'id': profile.id}) }}">Editer mon profile</a>
                            <p><a href="{{ path('service_new') }}">Ajouter un service</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-info">
                <h4>Description</h4>
                <div class="row">
                    <p class="lead">{{ profile.introduction ?: 'Pas de description' }}</p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
