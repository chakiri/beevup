{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <section id="intro" class="clearfix section-bg-light">
        <div class="container">

            <div class="intro-img">
                <img src="/images/intro-img.svg" alt="" class="img-fluid">
            </div>

            <div class="intro-info">
                <h2>Nous nous efforçons à vous trouver les meilleurs <span>solutions</span><br>pour votre business!</h2>
                <div>
                    <a href="{{ path('company_show', {'slug': app.user.company.slug}) }}" class="btn-get-started scrollto">Ma fiche entreprise</a>
                    <a href="{{ path('service') }}" class="btn-services scrollto">Nos services</a>
                </div>
            </div>

        </div>
    </section>
{% endblock %}
