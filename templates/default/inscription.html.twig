                {# case information boxes#}
                <div class="landing-page-boxes p-0">
                    <div class="row">
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <div class="text-center">
                                <div class="landing-page-section4-bloc-image">
                                    <img class="landing-page-section4-img" src="{{ asset('build/images/homePage/boxes/search.png') }}" alt="">
