{% extends 'base.html.twig' %}
{% form_theme RegistrationForm 'bootstrap_4_layout.html.twig' %}

{% block title %} Accueil {% endblock %}

{% block body %}
    <div id ="inscription" class="landing-page-container">
        <div class="position-relative">
           <div class="landing-page-first-bloc">
               <div class="landign-page-bloc1 header-padding">
                    <section>
                       <div class="row">
                           <div class="col-lg-8 mt-5">
                               <img class="landing-page-logo" src="{{ asset('build/images/default/logo-beevup-blue.png') }}" alt="">
                               <h1 class="landign-page-slogan">
                                   La plateforme des professionnels<br> pour développer votre entreprise
                               </h1>
                              <p class="landign-page-description">
                                  <strong>Artisans, Commerçants, Professions Libérales, Indépendants, TPE/PME</strong><br><br>
                                  <span class="text-muted">Inscrivez-vous gratuitement pour commencer à développer votre activité !</span>
                              </p>
                           </div>
                           <div class="col-lg-4">
                               {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                   <div class="home-page-authentificated-user"></div>
                               {% else %}
                                  <div class="landing-page-registration-form">
                                      {{ form_start(RegistrationForm, {'attr': {'id': 'registration-form'}}) }}

                                          <div class="d-flex justify-content-between">
                                              <div class="mr-1">
                                                  {{ form_errors(RegistrationForm.lastname) }}
                                                  {{ form_widget(RegistrationForm.lastname) }}
                                              </div>
                                              <div>
                                                  {{ form_errors(RegistrationForm.firstname) }}
                                                  {{ form_widget(RegistrationForm.firstname) }}
                                              </div>
                                          </div>

                                          {{ form_errors(RegistrationForm.name) }}
                                          {{ form_widget(RegistrationForm.name) }}

                                          <div id ='box-get-siret'>
                                              {{ form_errors(RegistrationForm.get_siret_from_api) }}
                                              {{ form_widget(RegistrationForm.get_siret_from_api) }}
                                          </div>

                                          {{ form_errors(RegistrationForm.company) }}
                                          {{ form_widget(RegistrationForm.company) }}
                                          {{ form_errors(RegistrationForm.store) }}
                                          {{ form_widget(RegistrationForm.store) }}
                                          {{ form_errors(RegistrationForm.email) }}
                                          {{ form_widget(RegistrationForm.email) }}
                                          {{ form_errors(RegistrationForm.password) }}
                                          {{ form_widget(RegistrationForm.password) }}
                                          {{ form_errors(RegistrationForm.acceptConditions) }}
                                          {{ form_widget(RegistrationForm.acceptConditions) }}
                                          <div class="form-actions form-group">
                                              <button id ="inscription-btn" type="submit" class="col-12 orange-btn" disabled>S'inscrire</button>
                                          </div>
                                      {{ form_end(RegistrationForm) }}
                                      <div class="text-center mt-3">
                                          <p>Ou <a href="{{ path('security_login') }}">Se connecter</a> </p>
                                      </div>
                                  </div>
                               {% endif %}
                           </div>
                       </div>

