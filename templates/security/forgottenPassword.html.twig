{% extends 'base.html.twig' %}

{% block title %} Mot de passe oubliée {% endblock %}

{% block body %}
    <section class="security_login clearfix section-bg-light">
        <div class="">

            {% include 'partials/flashes.html.twig' %}

            <div class="row sign-in-page">
                <div class="signin-popup">
                    <div class="signin-pop">
                        <div>
                            <div class="col-md-12">
                                {% for label, messages in app.flashes %}
                                    <div id="alert" class="container-bv" >
                                        {% for message in messages %}
                                            <div class="alert alert-dismissible alert-{{ label }} mb-0" style="width: 100%">
                                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                <strong>{{ message|raw }}</strong>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="cmp-info">
                                    <div class="cm-logo">

                                        <p>Entrez votre  e-mail pour réinitialiser votre mot de passe.
                                            Vous allez recevoir un e-mail avec toutes les instructions à suivre pour réinitialiser votre mot de passe.</p>
                                    </div><!--cm-logo end-->
                                    <img src="{{ asset('build/images/homePage/landingPage-man.png') }}" alt="">
                                </div><!--cmp-info end-->
                            </div>
                            <div class="col-lg-6">
                                <div class="login-sec">
                                    <div class="sign_in_sec current" id="tab-1">
                                        <h3>Mot de passe oublié</h3>
                                        <form action="{{ path('security_forgotten_password') }}" method="post">
                                            <div class="row">
                                                <div class="col-lg-12 no-pdd">
                                                    <div class="sn-field">
                                                        {{ form_widget(forgotPasswordForm.email) }}
                                                        <i class="la la-user"></i>

                                                    </div><!--sn-field end-->
                                                </div>


                                                <div class="col-12 form-actions form-group">
                                                    <button  type="submit" value="Envoyer"  class="orange-btn">Envoyer</button>
                                                </div>
                                            </div>
                                        </form>

                                    </div><!--sign_in_sec end-->

                                </div><!--login-sec end-->
                            </div>
                        </div>
                    </div><!--signin-pop end-->
                </div><!--signin-popup end-->

            </div><!--sign-in-page end-->
        </div>
    </section>
{% endblock %}
