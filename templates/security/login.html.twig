{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="container mt-6">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3 mt-5">
                    <form action="{{ path('security_login') }}" method="post">
                        <fieldset>
                            <h1>Connexion</h1>

                            {% if hasError %}
                                <div class="alert alert-dismissible alert-danger">Une erreur est survenu, veuillez ressayer</div>
                            {% endif %}

                            <div class="form-group">
                                <label for="exampleInputEmail1">Adresse Email</label>
                                <input type="email" name="_username" value="{{ lastUsername }}" class="form-control" id="exampleInputEmail1"  placeholder="Entrez email" required>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" name="_password" class="form-control" id="exampleInputPassword1" placeholder="Password" required>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Connexion</button>
                            </div>

                            <div class="login-checkbox text-center">
                                <label>
                                    <a href="#">Mot de passe oubli√© ?</a>
                                </label>
                            </div>

                        </fieldset>
                    </form>
                </div>

                <div class="register-link text-center">
                    <p>Pas encore inscrit ? <a href="{{ path('security_registration') }}">Inscrivez-vous !</a></p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
