{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section id="login-page" class="clearfix section-bg-light">
        <div>
            <div class="landing-page-first-bloc">
                <div class="landign-page-bloc1">
                    <header id="landing-page-header">
                        <div class="row">
                            <div class="col-lg-10 logo">
                                <a href="{{ path('dashboard') }}">
                                    <img class="landing-page-logo" src="/images/default/logo-beevup-mode.png" alt="">
                                </a>
                            </div>
                            <div class="col-lg-2 connexion-btn">
                                <button type="submit" class="white-btn cnx-btn" method="post">
                                    <a class="landing-page-connexin-link" href="{{ path('security_registration') }}">
                                        Inscription </a>
                                </button>
                            </div>
                        </div>
                    </header>
                </div>
            </div>
           <div class="row sign-in-page">
                <div class="signin-popup">
                    <div class="signin-pop">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="cmp-info">
                                    <div class="cm-logo">

                                        <p>Rejoignez Beev'Up, le mouvement dédié aux entreprises locales</p>
                                    </div><!--cm-logo end-->
                                    <img src="images/homePage/login-page.png" alt="">
                                </div><!--cmp-info end-->
                            </div>
                            <div class="col-lg-6">
                                <div class="login-sec">

                                    <div class="sign_in_sec current" id="tab-1">
                                        {% include 'partials/flashes.html.twig' %}
                                        {% for message in app.flashes('create-service-success') %}
                                            <div class="alert alert-success">
                                                {{ message }}
                                            </div>
                                        {% endfor %}

                                        {% for message in app.flashes('update-service-success') %}
                                            <div class="alert alert-success">
                                                {{ message }}
                                            </div>
                                        {% endfor %}

                                        {% if hasError %}
                                            {% if isActivated == false %}
                                                <div class="alert alert-dismissible alert-danger">
                                                    Votre compte n'est pas encore activé
                                                </div>
                                            {% else  %}
                                                <div class="alert alert-dismissible alert-danger">
                                                    L'adresse email et le mot de passe que vous avez saisis ne correspondent pas à ceux présents dans nos fichiers.
                                                    Veuillez vérifier et réessayer.
                                                </div>
                                            {% endif %}
                                        {% endif %}
                                        <h3>Connexion</h3>
                                        <form action="{{ path('security_login') }}" method="post">
                                            <div class="row">
                                                <div class="col-lg-12 no-pdd">
                                                    <div class="sn-field">
                                                        <input type="email" name="_username" value="{{ lastUsername }}"   placeholder="Email" required>
                                                        <i class="la la-user"></i>

                                                    </div><!--sn-field end-->
                                                </div>
                                                <div class="col-lg-12 no-pdd">
                                                    <div class="sn-field">
                                                        <input type="password" name="_password" placeholder="Mot de passe" required>
                                                        <i class="la la-lock"></i>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 no-pdd">
                                                    <div class="checky-sec">

                                                        <a class="forget-password-link" href="{{ path('security_forgotten_password') }}">Mot de passe oublié ?</a>

                                                    </div>
                                                    <div class="checky-sec">


                                                        <a  class="forget-password-link" href="{{ path('security_registration') }}">Pas encore inscrit ?  Inscrivez-vous !</a>
                                                    </div>
                                                </div>

                                                <div class="col-12 form-actions form-group">
                                                    <button  type="submit" class="orange-btn">Connexion</button>
                                                </div>
                                            </div>
                                        </form>

                                    </div><!--sign_in_sec end-->

                                </div><!--login-sec end-->
                            </div>
                        </div>

                    </div><!--signin-pop end-->

                </div><!--signin-popup end-->

            </div><!--sign-in-page end-->

        </div>

        {#dispaly cookies message #}
        {% include 'partials/cookies.html.twig' %}

    </section>
{% endblock %}
