{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    <section id="login-page" class="clearfix section-bg-light">
        <div>
            <div class="landing-page-first-bloc">
                <div class="landign-page-bloc1">
                    <header id="landing-page-header">
                        <div class="row">
                            <div class="col-lg-10 logo">
                                <a href="{{ path('dashboard') }}">
                                    <img class="landing-page-logo" src="/images/logo_bv_mode.png" alt="">
                                </a>
                            </div>
                            <div class="col-lg-2 connexion-btn">
                                <button type="submit" class="white-btn cnx-btn" method="post">
                                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                        <a class="landing-page-connexin-link" href="{{ path('dashboard') }}">
                                            Accueil</a>
                                    {% else %}
                                        <a class="landing-page-connexin-link" href="{{ path('security_login') }}">
                                            Se connecter</a>
                                    {% endif %}
                                </button>
                            </div>
                        </div>
                    </header>
                </div>
            </div>
            <div class="row sign-in-page">
                <div class="signin-popup">
                    <div class="signin-pop">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="cmp-info">
                                    <div class="cm-logo">

                                        <p>Rejoignez Beev'Up, le mouvement dédié aux entreprises locales</p>
                                    </div><!--cm-logo end-->
                                    <img src="/images/homePage/login-page.png" alt="">
                                </div><!--cmp-info end-->
                            </div>
                            <div class="col-lg-6">
                                <div class="login-sec">

                                    <div class="sign_in_sec current" id="tab-1">
                                        {% include 'partials/flashes.html.twig' %}


                                        <h3>Réinitialiser Votre mot de passe</h3>


                                        <div class="form-group">
                                        {{ form_start(forgotPasswordForm, {'token':token}) }}
                                            {{ form_errors(forgotPasswordForm.password) }}
                                            <div class="input-group">
                                                {{ form_widget(forgotPasswordForm.password) }}

                                            </div>
                                            {% if app.request.get('_route') =='security_new_account' %}
                                                {{ form_errors(forgotPasswordForm.acceptConditions) }}
                                                {{ form_widget(forgotPasswordForm.acceptConditions) }}
                                            {% endif %}
                                        </div>
                                        <div class="form-actions form-group">
                                            <button id ="inscription-btn" type="submit" class="orange-btn" disabled>Envoyer</button>
                                        </div>

                                    </div><!--sign_in_sec end-->

                                </div><!--login-sec end-->
                            </div>
                        </div>

                    </div><!--signin-pop end-->

                </div><!--signin-popup end-->

            </div><!--sign-in-page end-->

        </div>

    </section>
{% endblock %}
