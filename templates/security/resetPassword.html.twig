{% extends 'base.html.twig' %}

{% block title %} Réinitialiser le mot de passe {% endblock %}

{% block body %}
    <section id="login-page" class="clearfix section-bg-light">
        <div class="container mt-6">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="bg-light py-3 px-3 mt-5 btn-radius">
                        {{ form_start(forgotPasswordForm, {'token':token}) }}

                          <fieldset>
                                <h1 class="mvp-color security-title">Réinitialiser le mot de passe</h1>
                                {% include 'partials/flashes.html.twig' %}
                                {{ form_start(forgotPasswordForm) }}

                                    <div class="form-group">
                                        {{ form_label(forgotPasswordForm.password) }}
                                        {{ form_errors(forgotPasswordForm.password) }}
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-lock" aria-hidden="true"></i>
                                                    </span>
                                            </div>
                                            {{ form_widget(forgotPasswordForm.password) }}
                                        </div>
                                    </div>


                                <div class="text-center">
                                    <button type="submit" class="btn mvp-btn mvp-bg btn-radius">Envoyer</button>
                                </div>



                            </fieldset>
                        </form>
                    </div>

                    <div class="register-link text-center">
                        <p class="text-white mt-2">Pas encore inscrit ? <a  class="text-white" href="{{ path('security_registration') }}">Inscrivez-vous !</a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
