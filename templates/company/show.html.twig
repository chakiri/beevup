{% extends 'base.html.twig' %}

{% block title %}Mon entreprise{% endblock %}

{% block body %}

    <section id="company" class="mt-3">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-12">
                    <div class="box-image">
                        {% if company.logo is empty %}
                            <img src="/images/unknow-company.jpg" class="img-fluid" alt="">
                        {% else %}
                            <img src="/images/logos/{{ company.logo }}" class="img-fluid" alt="">
                        {% endif %}
                    </div>
                    <div class="box">
                        <h1 class="display-6">{{ company.name }}</h1>
                        <h3><small class="text-muted">SIRET : </small>{{ company.siret }}</h3>
                        <p class="lead">{{ company.introduction }}</p>
                        {% if is_granted('ROLE_ADMIN_COMPANY') and company.id == app.user.company.id %}
                         <a href="{{ path('company_edit', {'id': company.id}) }}">Editer mon entreprise</a>
                        {% endif %}
                    </div>
                    <div class="box">
                        <h4>Mon magasin Bureau Vallée</h4>
                        <p class="lead">{{ company.store.introduction ?: 'Pas d\'introduction'}}</p>
                    </div>
                </div>
                <div class="col-lg-8 col-md-12">
                    <div class="box">
                        <h4>Description de l'entreprise</h4>
                        <p class="lead">{{ company.description }}</p>
                    </div>
                    <div class="box">
                        <h4>Les utilisateurs de l'entreprise</h4>
                        <p class="lead">Pas d'utilisateurs reliés à votre entreprise</p>
                    </div>
                    <div class="row col-12">
                        <div class="col-sm-7">
                            <h4>Mes recommandations</h4>
                        </div>
                        <div class="col-sm-5">
                            <div class="float-right">  
                                {% if company.id != app.user.company.id and app.user.profile.isCompleted == true %}
                                    <button type="button" 
                                            class="btn btn-primary btn-sm btn-radius add-recommandation" 
                                            data-toggle="modal"
                                            data-target="{{ path('recommandation') }}" 
                                            data-whatever="@getbootstrap"
                                            data-company="{{company.id}}">
                                       + Proposer une recommandation
                                    </button>
                            
                                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            {% include 'default/spinner.html.twig' %}
                                        </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div> 
                    <div class="clearfix"></div>
                    {% for message in app.flashes('recommandation-success') %}
                        <div class="alert alert-success btn-radius">
                          {{ message }}
                        </div>
                    {% endfor %}  
                    {% if recommandations %}
                        {% for recommandation in recommandations %}
                            <div class="box">
                                <div class="row">
                                    <div class="col-2">
                                        <div class="box-image">
                                            {% if recommandation.user.profile.photo is empty %}
                                                <img src="/images/default_user.png" class="img-fluid" alt="">
                                            {% else %}
                                            {% set variable = recommandation.user.profile.photo  %}
                                                <img src="{{ asset('/images/profil/photo/'~ variable) | imagine_filter('medium') }}" class="img-fluid" alt="">
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="col-9">
                                        <p><strong>{{recommandation.user.profile.lastname|capitalize }} {{recommandation.user.profile.firstname|capitalize }}</strong></p>
                                        <p class="text-muted">{{recommandation.message }}</p> 
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        {% else %}
                            <div class="box">
                                <div class="row">
                                    <p>Aucune recommandation</p>
                                </div>
                            </div>
                       {% endif %}
                </div>
            </div>
        </div>
    </section>
      
{% endblock %}
