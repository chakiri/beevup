{% extends 'base.html.twig' %}

{% form_theme ServiceForm 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <div class="container">
       <div class="row">
        <div class="offset-lg-3 col-md-6">
          <div class="bg-light py-3 px-3 mt-5 mb-5">
            <div class="card-body card-block">
                <div class="text-center">
                    {% if edit == true %}
                        <h1>Modifier mon service</h1>
                    {% else %}
                        <h1>Ajouter un service</h1>
                    {% endif %}
                </div>
                {{ form_start(ServiceForm) }}
                <div class="form-group">
                  {{ form_row(ServiceForm.title) }}
                </div>
                <div class="form-group">
                  {{ form_row(ServiceForm.introduction) }}
                </div>
                <div class="form-group">
                  {{ form_row(ServiceForm.description) }}
                </div>
                <div class="form-group">
                  {{ form_row(ServiceForm.category) }}
                </div>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <div class="form-group">
                        {{ form_row(ServiceForm.type) }}
                    </div>
                {% endif %}
                <label class="form-control-label" for="">Images</label>
                <div class="form-group">
                    {{ form_widget(ServiceForm.imageFile) }}
                </div>
                <div class="form-group">
                    {{ form_widget(ServiceForm.imageFile1) }}
                </div>
                <div class="form-group">
                    {{ form_widget(ServiceForm.imageFile2) }}
                </div>
                <div class="form-group">
                    {{ form_widget(ServiceForm.imageFile3) }}
                </div>
                <div class="form-group">
                    {{ form_row(ServiceForm.isQuote) }}
                </div>
                <div id="price" class="form-group" {% if service.isQuote == true %} style="display: none" {% endif %}>
                    {{ form_label(ServiceForm.price) }}
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">â‚¬</span>
                        </div>
                        {{ form_widget(ServiceForm.price) }}
                        <div class="input-group-append">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_row(ServiceForm.isDiscovery) }}
                </div>
                <div id="discovery" class="form-group" {% if service.isDiscovery == false %} style="display: none" {% endif %}>
                    {{ form_row(ServiceForm.discoveryContent) }}
                </div>
                <div class="form-actions form-group text-right">
                  <button type="submit" class="btn btn-success btn-md">Enregistrer</button>
                </div>
                {{ form_end(ServiceForm) }}
            </div>

            </div>
        </div>
      </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/js/form.js"></script>
{% endblock %}
