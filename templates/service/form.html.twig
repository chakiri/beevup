{% extends 'base.html.twig' %}

{% form_theme ServiceForm 'bootstrap_4_layout.html.twig' %}

  {% block body %}

    <div class="container">
       <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <div class="bg-light py-3 px-3 mt-5 mb-5">
            {% if edit == 1 %}
            <h1>Modifier mon service</h1>
            {% else %}
            <h1>Ajouter un service</h1>
            {% endif %}

            {% for message in app.flashes('create-service-success') %}
              <div class="alert alert-success">
                  {{ message }}
              </div>
            {% endfor %}

            {% for message in app.flashes('update-service-success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
            {% endfor %}
           
     
            <div class="card-body card-block">
                {{ form_start(ServiceForm) }}
                <div class="form-group">
                  {{ form_row(ServiceForm.title) }}
                </div>
                <div class="form-group">
                  {{ form_row(ServiceForm.introduction) }}
                </div>
                <div class="form-group">
                  {{ form_row(ServiceForm.description) }}
                </div>
                <div class="form-group">
                  {{ form_row(ServiceForm.type) }}
                </div>
                <div class="form-group">
                    {{ form_row(ServiceForm.imageFile) }}
                </div>
                <div class="form-group">
                    {{ form_row(ServiceForm.price) }}
                </div>
                <div class="form-group">
                    {{ form_row(ServiceForm.isFree) }}
                </div>
                {% if edit == 1 %}
                  <div class="box-image service-box-image">
                    <img src="/images/service/photo/{{ service.photo }}" class="img-fluid" alt="">
                </div>
                {% endif %}
                <div class="form-actions form-group">
                  <button type="submit" class="btn btn-success btn-sm">Enregistrer</button>
                </div>
                {{ form_end(ServiceForm) }}
            </div>

            </div>
        </div>
      </div>
    </div>

  {% endblock %} 