{% extends 'base.html.twig' %}

{% block title %}Mon entreprise{% endblock %}

{% block body %}

    <section id="service" class="mt-3">
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <div class="box-image">
                       <img src="/images/service/photo/{{ service.photo }}" class="img-fluid" alt="">
                    </div>
                    <div class="box">
                        <h4>Proposé par </h4>
                        {{ service.user.profile.lastname|capitalize }} {{ service.user.profile.firstname|capitalize }} de <strong>  {{ service.user.company.name|capitalize }}</strong>
                       
                        <P> Service Payant:
                            {% if service.isfree == 1 %}
                              Oui
                            {% else %}
                              Non
                            {% endif %}
                        </P>
                     </div>
                </div>
                <div class="col-lg-8">
                    <div class="box">
                        <h4>Description du service ({{ service.type }})</h4>
                        <p class="lead">{{ service.description|raw }}</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="why-us" class="box">
                    <h4>Découvrez la prestation</h4>
                    <div class="row pt-3">
                        <div class="col-lg-4 col-md-6">
                            <div class="card wow bounceInUp" style="visibility: visible; animation-name: bounceInUp;">
                                <i class="fa fa-diamond"></i>
                                <div class="card-body">
