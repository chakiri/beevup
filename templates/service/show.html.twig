{% extends 'base.html.twig' %}

{% block title %}Mon entreprise{% endblock %}

{% block body %}
<div class="main-section">
    <div class="container">
        <div class="main-section-data page-content">
            <div class="row">
                <div class="col-lg-3">
                    <div class="main-left-sidebar">
                        <div class="user_profile">
                            <div class="user-pro-img">
                                {% if service.filename %}
                                    <img src="{{ vich_uploader_asset(service, 'imageFile')|imagine_filter('card') }}"  alt="">
                                {% else %}
                                    <img src="http://via.placeholder.com/170x170" alt="">
                                {% endif %}
                                <div class="">
                                    {% if service.user == app.user %}
                                        <ul class="flw-hr">
                                            <li>
                                                <a href="{{ path('service_edit', {'id': service.id}) }}">
                                                    Modifier
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#" type="button" data-toggle="modal" data-target="#confirmDelete">
                                                    Supprimer
                                                </a>
                                            </li>
                                        </ul>
                                    {% elseif service.type.name == 'plateform' %}
                                        <ul class="flw-hr">
                                        {% if is_granted('ROLE_ADMIN_STORE') %}
                                            {% if storeService %}
                                                <li><a href="{{ path('service_dissociate', {'id': service.id}) }}" type="button">Retirer</a></li>
                                                <li><a href="#" type="button" data-toggle="modal" data-target="#editPrice">Editer le prix</a></li>
                                            {% else %}
                                                <li>
                                                  <a href="{{ path('service_associate', {'service': service.id}) }}" type="button">Ajouter ce service</a>
                                                </li>
                                                <li>
                                                    <a target="_blank"  href="{{ path('chat_private', {'id': service.user.id}) }}"> Demander un devis</a>
                                                </li>
                                            {% endif %}
                                        {% endif %}
                                        </ul>
                                    {% endif %}
                                    <ul class="ul-none">
                                        <li>
                                            {% if service.isQuote %}
                                                <span><b>Prix :</b> Sur devis</span>
                                                {% if app.user != service.user %}
                                                    <div class="lt-sec">
                                                        <a href="{{ path('chat_private', {'id': service.user}) }}" title="">Demander un devis</a>
                                                    </div>
                                                {% endif %}
                                            {% else %}
                                                <span>
                                                    <b>Prix : </b>
                                                    {% if storeService %}
                                                        {% if storeService.price != '' %}
                                                            {{ storeService.price }} €.H.T {% if service.unity != null  %} /  {{ service.unity }}{% endif %}
                                                        {% endif %}
                                                    {% else %}
                                                        {{ service.price }} €.H.T {% if service.unity != null  %} /  {{ service.unity }} {% endif %}
                                                    {% endif %}
                                                </span>
                                            {% endif %}
                                        </li>
                                        {% if service.isDiscovery == 1 %}
                                            <li>
                                                <span><b>Offre exclusive Beev'Up</b></span>
                                            </li>
                                        {% endif %}
                                        {% if app.user != service.user  %}
                                            <div class="mt-3">
                                                {% if storeService %}
                                                    <div class="btn white-bg">
                                                        <a href="{{ path('chat_private', {'id': adminStoreService.id}) }}" title="">Contacter {{ adminStoreService.profile.lastname }}</a>
                                                    </div>
                                                {% else %}
                                                    <div class="btn white-bg">
                                                        <a href="{{ path('chat_private', {'id': service.user}) }}" title="">Contacter {{ service.user.company.name }}</a>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                    </ul>
                                </div><!--user_pro_status end-->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="main-ws-sec">
                        <div class="user-tab-sec">
                            <h3>{{ service.title }}</h3>
                            <div class="star-descp">
                                {% if service.type.name =='company' %}
                                    <p><span>
                                         Proposé par :
                                        <a href="{{ path('company_show', {'slug': service.user.company.slug}) }}">
                                            {{ service.user.company.name|capitalize }}
                                        </a>
                                    </span></p>
                                {% elseif service.type.name =='store' %}
                                    <p><span> Proposé par: Bureau Vallée </span></p>
                                    <p><span> Chargé du service:
                                        <a href="{{ path('profile_show', {'id': service.user.profile.id}) }}">
                                          {{ service.user.profile.firstname|capitalize }} {{ service.user.profile.lastname|capitalize }}
                                        </a>
                                    </span>
                                    </p>
                                {% endif %}
                            </div><!--star-descp end-->
                            <div class="product-feed-tab current" id="info-dd">
                                <div class="user-profile-ov page-title sign_in_sec current">
                                    <h3> A propos du service</h3>
                                     <p>{{ service.description|raw ?: 'Pas de description' }}</p>
                                 </div>
                                {% if service.isDiscovery %}
                                    <div class="user-profile-ov page-title sign_in_sec current">
                                        <h3> A propos de l'offre exclusive</h3>
                                        <p>{{ service.discoveryContent|raw ?: 'Pas de description' }}</p>
                                    </div>
                                {% endif %}
                                <div class="user-profile-ov page-title sign_in_sec current">
                                    <h3> Photos</h3>
                                    <div class="gallery_pf">
                                        <div class="row">
                                            {% if service.filename %}
                                                <div class="col-lg-4 col-md-4 col-sm-6 col-6">
                                                    <div class="gallery_pt">
                                                        <img src="{{ vich_uploader_asset(service, 'imageFile')|imagine_filter('card') }}" alt="">
                                                    </div><!--gallery_pt end-->
                                                </div>
                                            {% endif %}
                                            {% if service.filename1 %}
                                                <div class="col-lg-4 col-md-4 col-sm-6 col-6">
                                                    <div class="gallery_pt">
                                                        <img src="{{ vich_uploader_asset(service, 'imageFile1')|imagine_filter('card') }}" alt="">
                                                    </div><!--gallery_pt end-->
                                                </div>
                                            {% endif %}
                                            {% if service.filename2 %}
                                                <div class="col-lg-4 col-md-4 col-sm-6 col-6">
                                                    <div class="gallery_pt">
                                                        <img src="{{ vich_uploader_asset(service, 'imageFile2')|imagine_filter('card') }}" alt="">
                                                    </div><!--gallery_pt end-->
                                                </div>
                                            {% endif %}
                                            {% if service.filename3 %}
                                                <div class="col-lg-4 col-md-4 col-sm-6 col-6">
                                                    <div class="gallery_pt">
                                                        <img src="{{ vich_uploader_asset(service, 'imageFile3')|imagine_filter('card') }}" alt="">
                                                    </div><!--gallery_pt end-->
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div><!--gallery_pf end-->
                                </div>

                                <div class="message-btn right">
                                    <div class="message-btn">
                                        {% if service.user.id != app.user.id  and app.user.profile.isCompleted == true %}
                                            <a href="#" type="button" class="add-recommandation btn btn-sm btn-2"  data-whatever="@getbootstrap"
                                               data-toggle="modal" data-target="{{ path('recommandation') }}" data-service="{{service.id}}"
                                               data-company="{{companyId}}"><i class="fa fa-thumbs-up"></i> Laisser une recommandation </a>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="user-profile-ov st2 page-title sign_in_sec current">
                                    <h3>
                                        <a href="#" title="" class="exp-bx-open">La communauté a recommandé ce service </a>
                                    </h3>
                                    {% if recommandations %}
                                        {% for recommandation in recommandations %}
                                            <div class="suggestion-usd">
                                                {% if recommandation.user.profile.filename %}
                                                    <img src="{{ vich_uploader_asset(recommandation.user.profile, 'imageFile')|imagine_filter('miniature') }}" alt="">
                                                {% else %}
                                                    <img src="http://via.placeholder.com/35x35" alt="">
                                                {% endif %}
                                                <div class="sgt-text hover-info">
                                                    <h4>
                                                        <a href="{{ path('profile_show', {'id': recommandation.user.profile.id}) }}">
                                                        {{recommandation.user.profile.lastname|capitalize }} {{recommandation.user.profile.firstname|capitalize }}</a></h4>
                                                    {% include 'default/modals/hoverUserPopin.html.twig' with {'user': recommandation.user} %}
                                                </div>
                                                <p style="float: left;position: relative;left: 11px;top: -10px;width: 84%;" class="recommandation-message">
                                                    {{ recommandation.message  }}
                                                </p>

                                            </div>
                                        {% endfor %}
                                    {% else %}
                                        <p>Soyez le premier à proposer une recommandation</p>
                                    {% endif %}
                                </div><!--user-profile-ov end-->
                                {% if service.user.company != null %}
                                   <div class="user-profile-ov st2 page-title sign_in_sec current">
                                    <h3>
                                        <a href="{{ path('company_show', {'slug': service.user.company.slug}) }}">D'autres personnes ont recommandé {{ service.user.company|capitalize }}</a>
                                    </h3>
                                    {% if recommandationsCompany %}
                                        {% for recommandationCompany in recommandationsCompany %}
                                            <div class="suggestion-usd">
                                                {% if recommandationCompany.user.profile.filename %}
                                                    <img src="{{ vich_uploader_asset(recommandationCompany.user.profile, 'imageFile')|imagine_filter('miniature') }}" alt="">
                                                {% else %}
                                                    <img src="http://via.placeholder.com/35x35" alt="">
                                                {% endif %}
                                                <div class="sgt-text hover-info">
                                                    <h4>
                                                        <a href="{{ path('profile_show', {'id': recommandationCompany.user.profile.id}) }}">
                                                          {{recommandationCompany.user.profile.lastname|capitalize }} {{recommandationCompany.user.profile.firstname|capitalize }}
                                                        </a>
                                                    </h4>
                                                    {% include 'default/modals/hoverUserPopin.html.twig' with {'user': recommandationCompany.user} %}
                                                </div>
                                                <p style="float: left;position: relative;left: 11px;top: -10px;width: 84%;" class="recommandation-message">
                                                        {{recommandationCompany.message }}
                                                </p>

                                            </div>
                                        {% endfor %}
                                    {% else %}
                                        <p>Soyez le premier à proposer une recommandation</p>
                                    {% endif %}
                                </div><!--user-profile-ov end-->
                                {% endif %}

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    {% if similarServices %}
                        <div class="suggestions full-width">
                            <div class="sd-title page-title sign_in_sec current">
                                <h3>Services similaires</h3>
                            </div><!--sd-title end-->
                            <div class="suggestions-list">
                                {% for service in similarServices %}
                                    <div class="suggestion-usd">
                                        <div class="service-bloc-inf">
                                            {% if service.filename %}
                                                <img src="{{ vich_uploader_asset(service, 'imageFile')|imagine_filter('miniature') }}"  alt="">
                                            {% else %}
                                                <img src="http://via.placeholder.com/170x170" alt="">

                                            {% endif %}
                                        </div>
                                        <div class="sgt-text" style="position: relative;left: 10px;float: left;width: 193px;">
                                            <h4> <a href="{{ path('service_show', {'id': service.id}) }}" title="">{{ service.title|slice(0, 50) ~ '...'  }}</a></h4>

                                        </div>
                                    </div>
                                {% endfor %}
                            </div><!--suggestions-list end-->
                        </div><!--suggestions end-->
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block modals %}
    <div class="modal fade"
         id="recommandation"
         tabindex="-1"
         role="dialog"
         aria-labelledby="exampleModalLabel"
         aria-hidden="true">

        <div class="modal-dialog" role="document">
            <div class="modal-content"></div>
        </div>
    </div>

    <div class="modal" id="confirmDelete">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <p class="modal-title">Souhaitez-vous supprimer ce service ?</p>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <a href="{{ path('service_remove', {'id': service.id}) }}" type="button" class="btn small-btn grey-bg">Supprimer</a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="editPrice">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <p class="modal-title">Ajouter votre propre prix</p>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="{{ path('service_config', {'id': service.id}) }}" method="post">
                    <div class="modal-body">
                        <label for="price">Prix</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">€</span>
                            </div>
                            <input type="text" name="price" required>
                            <div class="input-group-append">
                                <span class="input-group-text">.00</span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-secondary">Editer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

