{% extends 'base.html.twig' %}

{% block title %}Mon entreprise{% endblock %}

{% block body %}

    <section id="service">
        <div class="container mt-5">
            <div class="row">
                
                <div class="col-4">
                    <div class="box-image">
                        {% if service.photo %}
                            <img src="/images/service/photo/{{ service.photo }}" class="img-fluid" alt="">
                        {% else %}
                            <img src="/images/unknow-service.jpg" class="img-fluid" alt="">
                        {% endif %}
                    </div>
                    <div class="box">
                        <h4>Propos√© par : {{ service.user.profile.firstname|capitalize ?: 'Inconnu' }}</h4>
                        <p>Type : {{ service.type.name }}</p>
                        <p> Service Payant:{% if service.isfree == 1 %} Oui {% else %} Non {% endif %}
                        {% if service.user.id == app.user.id %}   
                        <p class="mt-3"><a href="{{ path('service_edit', {'id': service.id}) }}">Editer mon service</a></p>
                        {% endif %}
                     </div>
                     
                </div>

                <div class="col-lg-8">
                    <div class="box">
                        <h4>{{ service.title }}</h4>
                        <p class="lead">Type de service : {{ service.type.name|capitalize }}</p>
                        <p class="lead">{{ service.introduction|raw }}</p>
                    </div>
                    <div class="box">
                        <h4>Description</h4>
                        <p class="lead">{{ service.description|raw }}</p>
                    </div>
                    <div class="row recommandations">
                        <div class="col-sm-7">
                            <h4>Mes recommandations</h4>
                        </div>
                        <div class="col-sm-5">
                            <div class="float-right">
                                {% if service.user.id != app.user.id  %}
                                    <button type="button" 
                                            class="btn btn-primary btn-sm btn-radius add-recommandation" 
                                            data-toggle="modal" 
                                            data-target="{{ path('recommandation') }}" 
                                            data-whatever="@getbootstrap" 
                                            data-service="{{service.id}}" 
                                            data-company="{{companyId}}"
                                    > 
                                        + Proposer une recommandation
                                    </button>
                                    
                                    <div class="modal fade" 
                                         id="exampleModal" 
                                         tabindex="-1" 
                                         role="dialog" 
                                         aria-labelledby="exampleModalLabel" 
                                         aria-hidden="true">
                                    
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content"></div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div> 

                        {% for message in app.flashes('recommandation-success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}  

                       <div class="clearfix"></div>                        
                        {% if recommandations %}
                            {% for recommandation in recommandations %}
                                <div class="box">
                                    <div class="row">
                                        <div class="col-2">
                                            <div class="avatar">
                                               <img src="/images/profil/photo/{{ recommandation.user.profile.photo }}" class="img-fluid" alt="">
                                            </div>
                                        </div>

                                        <div class="col-9">
                                            <p><strong>{{recommandation.user.profile.lastname|capitalize }} {{recommandation.user.profile.firstname|capitalize }}</strong></p>
                                            <p class="text-muted">{{recommandation.message }}</p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}  
                            <div class="box">
                                <div class="row">
                                   <p class="text-muted">Aucune recommandation </p>
                                </div>
                            </div> 
                       {% endif %}                               
                    </div>                   
                </div>
            </div>
       </div>
    </section>


{% endblock %}
