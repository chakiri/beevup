{% extends 'base.html.twig' %}

{% block title %}Mon entreprise{% endblock %}

{% block body %}

    <section id="service">
        <div class="container-mvp mt-3">
            <div class="row">
                <div class="col-4">
                    <div class="box-image">
                        {% if service.photo %}
                            <img src="/images/service/photo/{{ service.photo }}" class="img-fluid" alt="">
                        {% else %}
                            <img src="/images/unknow-service.jpg" class="img-fluid" alt="">
                        {% endif %}
                    </div>
                    <div class="box">
                        <h4>Propos√© par : {{ service.user.profile.firstname|capitalize }} {{ service.user.profile.lastname|capitalize }}</h4>
                        <p class="mt-3"> Service {% if service.isfree == 1 %} <strong>Payant</strong> {% else %} <strong>Gratuit</strong> {% endif %}
                        <p><a target="_blank" href="{{ path('chat_private', {'id': service.user.id}) }}">Discuter avec {{ service.user.profile.firstname|capitalize }}</a></p>
                     </div>
                </div>

                <div class="col-lg-8">
                    <div class="box">
                        <div class="row">
                            <div class="col-8">
                                <h4>{{ service.title }}</h4>
                                <p class="lead">{{ service.introduction|raw }}</p>
                                <p><i class="fa fa-map-marker"></i> Les clayes sous bois, France</p>
                            </div>
                            <div class="col-4">
                                {% if service.user == app.user %}
                                    <a href="{{ path('service_edit', {'id': service.id}) }}" type="button" class="btn btn-design btn-1">Editer le service</a>
                                    <a href="#" type="button" class="btn btn-design btn-2 mt-3">Supprimer le service</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="box">
                        <h4>Description</h4>
                        <p class="lead">{{ service.description|raw }}</p>
                    </div>

                    <div class="box">
                        <h4>Recommandations</h4>
                        {% if recommandations %}
                            {% for recommandation in recommandations %}
                                <div class="row">
                                    <div class="col-2">
                                        <div class="avatar">
                                            <img src="/images/profil/photo/{{ recommandation.user.profile.photo }}" class="img-fluid" alt="">
                                        </div>
                                    </div>

                                    <div class="col-9">
                                        <p><strong>{{recommandation.user.profile.lastname|capitalize }} {{recommandation.user.profile.firstname|capitalize }}</strong></p>
                                        <p class="text-muted">{{recommandation.message }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <p class="text-muted">Aucune recommandation pour l'instant</p>
                        {% endif %}

                        {% if service.user.id != app.user.id  %}
                            <p class="mt-3"><a href="#" type="button" class="add-recommandation" data-whatever="@getbootstrap"  data-toggle="modal" data-target="{{ path('recommandation') }}" data-service="{{service.id}}" data-company="{{companyId}}">Laisser une recommandation </a></p>
                        {% endif %}
                    </div>

                </div>
            </div>
       </div>
    </section>

{% endblock %}

{% block modals %}
    <div class="modal fade"
         id="exampleModal"
         tabindex="-1"
         role="dialog"
         aria-labelledby="exampleModalLabel"
         aria-hidden="true">

        <div class="modal-dialog" role="document">
            <div class="modal-content"></div>
        </div>
    </div>
{% endblock %}

