{% extends 'base.html.twig' %}

{% block title %}Mon magasin{% endblock %}

{% block body %}
<div class="main-section">
    <div class="container-bv">
        <div class="main-section-data page-content">
            <div class="row">
                <div class="col-lg-3">
                    <div class="main-left-sidebar">
                        <div class="user_profile">
                            <div class="user-pro-img">
                                {% if store.filename %}
                                    <img src="http://via.placeholder.com/170x170" alt="">
                                {% else %}
                                    <img src="http://via.placeholder.com/170x170" alt="">
                                {% endif %}
                                {% if is_granted('ROLE_ADMIN_STORE') and store.id == app.user.store.id %}
                                  <a href="{{ path('store_edit', {'id': store.id}) }}" title=""><i class="fa fa-camera"></i></a>
                                {% endif %}
                            </div><!--user-pro-img end-->
                            <div class="user_pro_status">

                                <ul class="flw-hr">

                                    {% if is_granted('ROLE_ADMIN_STORE') and store.id == app.user.store.id %}

                                        <li>
                                          <a class="flww" href="{{ path('store_edit', {'id': store.id}) }}">
                                              Modifier les informations
                                          </a>
                                        </li>
                                        {% endif %}

                                </ul>

                            </div><!--user_pro_status end-->
                            <ul class="social_links">
                                <li><i class="fas fa-map-marker-alt"></i> <span class="social-links-span">{{ store.addressNumber }} {{ store.addressStreet }} {{ store.addressPostCode }}</span></li>
                                <li><i class="fas fa-mobile-alt"></i> <span class="social-links-span">  {{ store.phone }} <span class="social-links-span"></li>
                            </ul>
                        </div><!--user_profile end-->
                        {% if users is defined %}

                                        <div class="suggestions full-width">
                                            <div class="suggestions-list">
                                                {% if companies is defined %}
                                                    <div class="sd-title page-title sign_in_sec current">
                                                        <h3>Les derniers arrivés </h3>

                                                    </div><!--sd-title end-->
                                                    {% for company in companies %}
                                                        <div class="suggestion-usd">

                                                            {% if company.filename %}
                                                                <img src="{{ vich_uploader_asset(company, 'imageFile') }}"  alt="">
                                                            {% else %}
                                                                <img src="http://via.placeholder.com/170x170" alt="">
                                                            {% endif %}
                                                            <div class="sgt-text">
                                                                <h4>
                                                                    <a href="{{ path('company_show', {'slug': company.slug}) }}">
                                                                        {{ company.name|capitalize }}</a> </h4>
                                                                {% if company.category != null %}
                                                                    <span>{{ company.category.name|capitalize }}</span>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                {% endif %}


                                            </div><!--suggestions-list end-->

                                        </div><!--suggestions end-->

                        {% endif %}

                    </div><!--main-left-sidebar end-->
                </div>

                <div class="col-lg-6">
                    <div class="main-ws-sec">
                        <div class="user-tab-sec">
                            <h3>{{ store.name|capitalize }}</h3>
                            <div class="star-descp">
                                <span>  {{ app.user.store.city }}  {{ app.user.store.country|country_name }}</span>
                                <p>{{  store.introduction }} </p>
                            </div><!--star-descp end-->
                        </div><!--user-tab-sec end-->

                        <div class="product-feed-tab current" id="info-dd">
                            <div class="user-profile-ov page-title sign_in_sec current">
                                <h3>
                                    <a href="#" title="" class="overview-open">
                                        {{ store.name|capitalize }} en quelques mots</a>
                                </h3>

                                <p>{{ store.description|raw ?: 'Pas de description' }}</p>
                            </div><!--user-profile-ov end-->


                            {% if  services %}
                                <div class="top-profiles">
                                    <div class="pf-hd page-title sign_in_sec current">
                                        <h3>Les services proposés par votre magasin Bureau Vallée</h3>
                                        <i class="la la-ellipsis-v"></i>
                                    </div>
                                    <div class="profiles-slider">
                                        {% for service in services %}
                                            <div class="user-profy">

                                                {% if service.filename %}
                                                    <img src="{{ vich_uploader_asset(service, 'imageFile') }}"  alt="">
                                                {% else %}
                                                    <img src="http://via.placeholder.com/57x57" alt="">
                                                {% endif %}
                                                <p style="min-height: 76px">{{ service.description|slice(0, 50) ~ '...' }}</p>
                                                <a href="#" title="">Voir plus</a>
                                            </div><!--user-profy end-->
                                        {% endfor %}

                                    </div><!--profiles-slider end-->
                                </div><!--top-profiles end-->
                            {% endif %}






                        </div>

                    </div><!--main-ws-sec end-->
                </div>

                <div class="col-lg-3">
                    <div class="right-sidebar">
                        <div class="sd-title page-title sign_in_sec current">
                            <h3>Notre équipe pour vous servir</h3>

                        </div><!--sd-title end-->

                        <div class="suggestions-list">
                            {%  for user in users %}
                                {% if user.profile != null %}
                                    {% if user.profile.isCompleted %}
                                        <div class="suggestion-usd">

                                            {% if user.profile.filename %}
                                                <img src="{{ vich_uploader_asset(user.profile, 'imageFile') }}"  alt="">
                                            {% else %}
                                                <img src="http://via.placeholder.com/170x170" alt="">
                                            {% endif %}
                                            <div class="sgt-text hover-info">
                                                <h4>  {{ user.profile.firstname|capitalize }} {{ user.profile.lastname|capitalize }}</h4>
                                                {% if user.profile.function != null %}
                                                    <span>{{ user.profile.function.name|capitalize }}</span>
                                                {% endif %}
                                                {% include 'default/modals/hoverUserPopin.html.twig' with {'user': user} %}
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                        </div><!--suggestions-list end-->

                    </div><!--suggestions end-->
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %}
