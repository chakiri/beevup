{% extends 'base.html.twig' %}

{% block title %}Mon magasin{% endblock %}

{% block body %}

    <section id="store" class="mt-3">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-12">
                    <div class="box-image">
                        <img src="/images/service.jpg" class="img-fluid" alt="">
                    </div>
                    <div class="box">
                        <h2 class="display-6">{{ store.name }}</h2>
                        <h3><small class="text-muted">Ref : </small>{{ store.reference }}</h3>
                        <p class="lead">{{ store.introduction }}</p>
                        <p>{{ store.email }}</p>
                        <p>{{ store.phone }}</p>
                        {% if app.user.store.id == store.id and (is_granted('ROLE_PATRON') or is_granted('ROLE_ADMIN_STORE')) %}
                        <a href="{{ path('store_edit', {'id': store.id}) }}">Editer mon magasin</a>
                        {% endif %}
                    </div>
                    <div class="box">
                        <h4>Carte</h4>
                        <p class="lead">Map non disponible actuellement</p>
                    </div>
                </div>
                <div class="col-lg-8 col-md-12">
                    <div class="box">
                        <h4>Description du magasin</h4>
                        <p class="lead">{{ store.description }}</p>
                    </div>
                    <div class="box">
                        <h4>Mes conseillés</h4>
                        <p class="lead">Pas de conseillés</p>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}
