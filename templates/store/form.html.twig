{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

  {% block body %}
  <div id="editCompany" class="mt-5">
    <div class="container-mvp">
      <div class="row">
          <div class="col-md-3">
              {% include 'default/aside.html.twig' %}
          </div>
          <div class="bg-light col-md-9 mb-4">


                    <div class="card-body card-block">
                        <div class="mvp-color">
                            <h4><i class="fa fa-pencil" aria-hidden="true"></i>
                                <span class="m-1">Editer mon magasin</span>
                            </h4>
                        </div>
                        {{ form_start(form) }}
                            <div class="row">

                                    <div class="form-group required col-md-6">
                                        {{ form_label(form.name) }}

                                        <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-address-card-o" aria-hidden="true"></i>
                                            </span>
                                        </div>
                                        {{ form_widget(form.name) }}
                                    </div>
                                    </div>
                                   <div class="form-group required col-md-6">
                                       {{ form_label(form.email) }}

                                       <div class="input-group">
                                           <div class="input-group-prepend">
                                            <span class="input-group-text">
                                               <i class="fa fa-envelope" aria-hidden="true"></i>
                                            </span>
                                           </div>
                                       {{ form_widget(form.email) }}
                                       </div>

                                    </div>
                            </div>
                        <div class="form-row">
                                    <div class="form-group col-md-6">
                                        {{ form_label(form.introduction) }}

                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                            <span class="input-group-text">
                                               <i class="fa fa-book" aria-hidden="true"></i>
                                            </span>
                                            </div>
                                        {{ form_widget(form.introduction) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">

                                        {{ form_label(form.description) }}

                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                            <span class="input-group-text">
                                               <i class="fa fa-sort-alpha-desc" aria-hidden="true"></i>
                                            </span>
                                            </div>
                                        {{ form_widget(form.description) }}
                                        </div>

                                    </div>
                        </div>

                        <div class="form-row">
                                    <div class="form-group col-md-6">
                                        {{ form_label(form.phone) }}

                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-phone" aria-hidden="true"></i>
                                            </span>
                                            </div>
                                        {{ form_widget(form.phone) }}
                                        </div>
                                    </div>
                            <div class="form-group col-md-6">
                                {{ form_label(form.defaultAdviser) }}

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-user" aria-hidden="true"></i>
                                            </span>
                                    </div>
                                {{ form_widget(form.defaultAdviser) }}
                                </div>

                                    </div>
                        </div>

                        <div class="form-row">

                                    <div class="form-group required col-md-6">
                                        {{ form_label(form.addressNumber) }}

                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-list-ol" aria-hidden="true"></i>
                                            </span>
                                            </div>
                                        {{ form_widget(form.addressNumber) }}
                                        </div>
                                    </div>
                            <div class="form-group required col-md-6">

                                        {{ form_label(form.addressStreet) }}

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                            </span>
                                    </div>
                                        {{ form_widget(form.addressStreet) }}
                                </div>
                                    </div>
                        </div>
                        <div class="form-row">
                                    <div class="form-group required col-md-6">
                                        {{ form_label(form.addressPostCode) }}

                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                            </span>
                                            </div>
                                        {{ form_widget(form.addressPostCode) }}
                                        </div>
                                    </div>
                            <div class="form-group required col-md-6">

                                        {{ form_label(form.city) }}

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-flag" aria-hidden="true"></i>
                                            </span>
                                    </div>
                                        {{ form_widget(form.city) }}
                                </div>
                                    </div>
                        </div>
                        <div class="form-row">
                                    <div class="form-group required col-md-6">
                                        {{ form_label(form.country) }}

                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-globe" aria-hidden="true"></i>
                                            </span>
                                            </div>
                                        {{ form_widget(form.country) }}
                                        </div>
                                    </div>
                            <div class="form-group col-md-6">
                            {{ form_label(form.imageFile) }}

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fa fa-camera-retro" aria-hidden="true"></i>
                                            </span>
                                    </div>
                            {{ form_widget(form.imageFile) }}
                                </div>
                            </div>
                            </div>
                    </div>

                            <div class="form-actions form-group text-center">
                                <button type="submit" class="btn mvp-btn mvp-bg btn-radius">Editer</button>
                            </div>

                        {{ form_end(form) }}
                    </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {% endblock %} 