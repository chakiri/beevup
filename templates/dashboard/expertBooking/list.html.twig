{% extends 'base.html.twig' %}

{% block title %}RDV expert{% endblock %}

{% block body %}
    <main>
        <div class="main-section">
            <div class="container-bv">
                <div class="main-section-data page-content">
                    <div class="row">
                        <div class="col-lg-3">
                            {% include 'profile/boxes/infoProfile.html.twig' %}
                        </div>
                        <div class="col-lg-6">
                            <div class="main-ws-sec">
                                <h3 class="my-3">Demandes de rendez-vous experts</h3>

                                <ul class="nav nav-pills mb-3" id="myTab" role="tablist">
                                    <li class="nav-item p-3">
                                        <a class="nav-link {% if status == 'toConfirm' %}active{% endif %}" href="{{ path('expert_booking_list', {'status': 'toConfirm'}) }}" >A confirmer</a>
                                    </li>
                                    <li class="nav-item p-3">
                                        <a class="nav-link {% if status == 'toCome' %}active{% endif %}"  href="{{ path('expert_booking_list', {'status': 'toCome'}) }}">A venir</a>
                                    </li>
                                    <li class="nav-item p-3">
                                        <a class="nav-link {% if status == 'passed' %}active{% endif %}"  href="{{ path('expert_booking_list', {'status': 'passed'}) }}">Passés</a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    {% if list %}
                                        {% for expertBooking in list %}
                                            <div class="box">
                                                <p><span class="text-muted">Nom et prénom : </span>{{ expertBooking.user.profile.lastname }} {{ expertBooking.user.profile.firstname }}</p>
                                                <p><span class="text-muted">Entreprise : </span>{{ expertBooking.user.company }}</p>
                                                <p><span class="text-muted">Email : </span>{{ expertBooking.user.email }}</p>
                                                <p><span class="text-muted">Téléphone : </span>{{ expertBooking.user.profile.phoneNumber }}</p>
                                                <p><span class="text-muted">Créneau : </span>
                                                    {{ expertBooking.timeSlot.date|date('d/m/Y') }} de
                                                    {{ expertBooking.timeSlot.startTime|date('H:i') }} à
                                                    {{ expertBooking.timeSlot.endTime|date('H:i') }}
                                                </p>
                                                <p><span class="text-muted">Description : </span>{{ expertBooking.description }}</p>
                                                <div class="be-contacted-handle-btn">
                                                    {% if status == 'toConfirm' %}
                                                        <button class="expert-booking-confirm-btn btn small-btn orange-bg ml-auto my-2" data-target="{{ path('expert_booking_confirm', {'id': expertBooking.id}) }}">Confirmer</button>
                                                        <button class="be-contacted-archive btn small-btn orange-bg ml-auto my-2" data-target="">Annuler</button>
                                                    {% elseif status == 'toCome'  %}
                                                        <button class="be-contacted-archive btn small-btn orange-bg ml-auto my-2" data-target="">Annuler</button>
                                                        {#{% elseif status == 'passed' %}
                                                        <button class="be-contacted-waiting btn small-btn orange-bg ml-auto my-2" data-target="">Remettre en attente</button>#}
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    {% else %}
                                        <div class="box">
                                            <div class="">
                                                <p>La liste est vide</p>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            {% include 'default/boxes/add-service-component.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('collectionPrototype') }}
{% endblock %}
