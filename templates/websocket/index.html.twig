{% extends 'base.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <section id="chatPlateform" data-private="{{ isPrivate }}" data-subject="{{ subject }}" data-from="{{ app.user.id }}" data-url="{{ path('save_notification') }}">
            <div class="col-lg-3 col-sm-4 sidebar">
                <div class="pt-3">
                    <div class="user">
                        {% if app.user.profile.photo is empty %}
                            <img src="/images/default_user.png" class="img-fluid" alt="">
                        {% else %}
                            <img src="/images/profil/photo/{{ app.user.profile.photo }}" class="img-fluid" alt="">
                        {% endif %}
                        <div id="notifications" data-url="{{ path('save_notification') }}" hidden></div>
                        <h4 id="userName" data-username="{{ app.user.profile.lastname }}" class="text-center">{{ app.user.profile.firstname|capitalize}}</h4>
                        <div id="userStatus" data-userfirstname="{{ app.user.profile.firstname }}"></div>
                    </div>
                    <h6><i class="fa fa-commenting-o" aria-hidden="true"></i><strong> Fils de discussion</strong></h6>
                    <hr>

                    {# Get nb of notifications by topic#}
                    {% set notificationsTopics = {} %}
                    {% for topic in topics %}
                        {% for notification in notifications %}
                            {% if notification.topic != null and notification.topic.name == topic.name %}
                                {% set notificationsTopics = notificationsTopics|merge({ (topic.name) : notification.nbMessages }) %}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}

                    <div id="channels">
                        <h6>Canaux</h6>
                        <ul class="channels">
                            {% for topic in topics %}
                                {% if topic.name == subject %}
                                    <li class="active"><a data-channel={{ topic.name }} href='{{ path('chat_topic', {'name': topic.name}) }}'><p>#{{ topic.name }} </p></a></li>
                                {% else %}
                                    <li><a data-channel={{ topic.name }} href='{{ path('chat_topic', {'name': topic.name}) }}'><p>#{{ topic.name }} <span class="badge badge-primary badge-pill">{{ notificationsTopics[topic.name] ?? null }}</span></p></a></li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>

                    {# Get nb of notifications by user#}
                    {% set notificationsUsers = {} %}
                    {% for user in users %}
                        {% for notification in notifications %}
                            {% if notification.receiver != null and notification.receiver.id == user.id %}
                                {% set notificationsUsers = notificationsUsers + {(user.id): notification.nbMessages} %}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}


                    <div id="privates" class="mt-5">
                        <h6 >Messages directs</h6>
                        <ul class="users">
                            {% for user in users %}
                                {% if user != app.user %}
                                    {% if user.id == subject %}
                                        <li class="active"><a data-channel={{ user.id }} href='{{ path('chat_private', {'id': user.id}) }}'><p><i class="fa fa-circle" style="font-size:10px;"></i> {{ user.profile.firstname|capitalize }} </p></a></li>
                                    {% else %}
                                        <li><a data-channel={{ user.id }} href='{{ path('chat_private', {'id': user.id}) }}'><p><i class="fa fa-circle" style="font-size:10px;"></i> {{ (user.profile.firstname ?? 'non defini' )|capitalize }} <span class="badge badge-primary badge-pill">{{ notificationsUsers[user.id] ?? null }}</span></p></a></li>
                                    {% endif %}
                                {% endif %}

                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-sm-8 chat mt-3">
                <div id="chat" class="box channel">
                    {% for message in messages %}
                        {% if message.user == app.user %}
                            <div class='message'><div class="text-right"><p class="name-user">Moi</p><span class="span-style-me">{{ message.content }} </span></div></div>
                        {% else %}
                            <div class='message'><div><p class="name-user">{{ message.user.profile.firstname|capitalize }}</p><span class="span-style"> {{ message.content }} </span></div></div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="box input">
                    <form onsubmit="return sender();" method="post">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-10 col-sm-8">
                                    <input type="text" id="message" data-url="{{ path('sender') }}" class="form-control" placeholder="Votre message ...">
                                </div>
                                <div class="col-lg-1 col-sm-2">
                                    <button id="sendBtn" class="btn icon" type="submit" ><i class="icon icon ion-ios-arrow-thin-right"></i></button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

    </section>




{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/lib/autobahn/autobahn.js"></script>
    <script type="text/javascript" src="/js/wamp.js"></script>
    <script type="text/javascript" src="/js/sendAjax.js"></script>
    {#<script type="text/javascript" src="/js/websocket.js"></script>#}
{% endblock %}
