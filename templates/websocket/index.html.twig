{% extends 'base.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <section id="chatPlateform" data-topic="{{ topic }}">
            <div class="row">
                <div class="col-lg-3 col-sm-4 sidebar">
                    <div class="pt-3">
                        <div class="user">
                            {% if app.user.profile.photo is empty %}
                                <img src="/images/default_user.png" class="img-fluid" alt="">
                            {% else %}
                                <img src="/images/profil/photo/{{ app.user.profile.photo }}" class="img-fluid" alt="">
                            {% endif %}
                            <div id="notifications" data-userid="{{ app.user.id }}" data-url="{{ path('save_notification') }}" hidden></div>
                            <h4 id="userName" data-username="{{ app.user.profile.lastname }}" class="text-center">{{ app.user.profile.lastname|capitalize }}</h4>
                            <div id="userStatus" data-userfirstname="{{ app.user.profile.firstname }}"></div>
                        </div>
                        <hr>
                        {#{% for channel in app.user.channels %}
                            {% set channelStr = '#' ~ channel %}
                            <ul>
                                <li><a data-channel="{{ channel }}" href='{{ channelStr }}'><span>#{{ channel|capitalize }}</span></a></li>
                            </ul>
                        {% endfor %}#}
                        <ul class="channels">
                            {% set badgeGeneral = '<div class="badge badge-primary badge-pill"></div>' %}
                            {% set badgeConception = '<div class="badge badge-primary badge-pill"></div>' %}
                            {% set badgeHelp = '<div class="badge badge-primary badge-pill"></div>' %}
                            {% for notifTopic in notifTopics %}
                                {% if notifTopic.topic == 'general' %}
                                    {% set badgeGeneral = '<div class="badge badge-primary badge-pill">' ~ notifTopic.nbMessages ~ '</div>' %}
                                {% elseif notifTopic.topic == 'conception' %}
                                    {% set badgeConception = '<div class="badge badge-primary badge-pill">' ~ notifTopic.nbMessages ~ '</div>' %}
                                {% elseif notifTopic.topic == 'help' %}
                                    {% set badgeHelp = '<div class="badge badge-primary badge-pill">' ~ notifTopic.nbMessages ~ '</div>' %}
                                {% endif %}
                            {% endfor %}

                            <li><a data-channel="general" href='{{ path('chat', {'topic': 'general'}) }}'><span>#general </span>{{ badgeGeneral|raw }}</a></li>
                            <li><a data-channel="conception" href='{{ path('chat', {'topic': 'conception'}) }}'><span>#conception </span>{{ badgeConception|raw }}</a></li>
                            <li><a data-channel="help" href='{{ path('chat', {'topic': 'help'}) }}'><span>#help </span>{{ badgeHelp|raw }}</a></li>
                        </ul>
                        <ul id="channelsList">
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9 col-sm-8 chat mt-3">
                    <div id="chat" class="box channel">
                        {% for message in messages %}
                            {% if message.user == app.user %}
                                <div class='message'><div class="text-right"><p class="name-user">Moi</p><span class="span-style-me">{{ message.content }} </span></div></div>
                            {% else %}
                                <div class='message'><div><p class="name-user">{{ message.user.profile.firstname|capitalize }}</p><span class="span-style"> {{ message.content }} </span></div></div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="box input">
                        <form onsubmit="return sender();" method="post">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-10 col-sm-8">
                                        <input type="text" id="message" data-url="{{ path('sender') }}" class="form-control" placeholder="Votre message ...">
                                    </div>
                                    <div class="col-lg-1 col-sm-2">
                                        <button id="sendBtn" class="btn icon" type="submit" ><i class="icon icon ion-ios-arrow-thin-right"></i></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

    </section>




{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/lib/autobahn/autobahn.js"></script>
    <script type="text/javascript" src="/js/wamp.js"></script>
    <script type="text/javascript" src="/js/sendAjax.js"></script>
    {#<script type="text/javascript" src="/js/websocket.js"></script>#}
{% endblock %}
