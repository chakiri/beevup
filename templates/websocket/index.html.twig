{% extends 'base.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <section id="chatPlateform">
            <div class="row">
                <div class="col-3 sidebar">
                    <div class="pt-3">
                        <h2 id="userName" data-user="{{ app.user.profile.lastname }}" class="text-center">{{ app.user.profile.lastname|capitalize }}</h2>
                        <div id="userStatus"></div>
                        <hr>
                        {#{% for channel in app.user.channels %}
                            {% set channelStr = '#' ~ channel %}
                            <ul>
                                <li><a data-channel="{{ channel }}" href='{{ channelStr }}'><span>#{{ channel|capitalize }}</span></a></li>
                            </ul>
                        {% endfor %}#}
                        <ul id="channelsList">
                        </ul>
                    </div>
                </div>
                <div class="col-9 chat mt-3">
                    <div id="chat" class="box channel">
                    </div>
                    <div class="box input">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-10 col-sm-8">
                                    <input type="text" id="message" class="form-control" placeholder="Votre message ...">
                                </div>
                                <div class="col-lg-1 col-sm-2">
                                    <button id="sendBtn" class="btn icon" ><i class="icon icon ion-ios-arrow-thin-right"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </section>




{% endblock %}

{% block javascripts %}
        <script type="text/javascript" src="/js/websocket.js"></script>
{% endblock %}
