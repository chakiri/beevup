{% extends 'base.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <style>
        body {
            font-family: arial;
        }

        .form-group {
            margin-bottom: 10px;
        }

        input {
            border: solid lightgrey 1px;
            padding: 8px;
        }

        label {
            display: inline-block;
            min-width: 150px;
        }

        #chat {
            height: 400px;
            width: 550px;
            border: solid lightgrey 1px;
            overflow: auto;
            margin-bottom: 20px;
        }

        button {
            padding: 6px 12px;
        }

        .message {
            padding: 10px 5px;
            margin-bottom: 10px;
            border-bottom: solid lightgrey 1px;
        }
    </style>

    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-3 bg-light">
                    <div class="sidebar ">
                        <ul id="channelsList"></ul>
                    </div>
                </div>
                <div class="col-9">
                    <div class="user-menu">
                        <div id="userName" data-user="{{ app.user.pseudo }}"><span>Mon pseudo : {{ app.user.pseudo }}</span></div>
                        <div id="userStatus"></div>
                    </div>
                    <div id="chat"></div>
                    <div >
                        <div class="form-group">
                            <label for="message">Message:</label>
                            <input type="text" id="message">
                        </div>
                        <button type="button" id="sendBtn">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
        <script type="text/javascript" src="/js/websocket.js"></script>
{% endblock %}
