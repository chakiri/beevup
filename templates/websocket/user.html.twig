{% extends 'base.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <section id="chatPlateform" data-current-user-id="{{ app.user.id}}">
            <div class="row">
                <div class="col-lg-3 col-sm-4 sidebar">
                    <div class="pt-3">
                        <div class="user">
                            {% if app.user.profile.photo is empty %}
                                <img src="/images/default_user.png" class="img-fluid" alt="">
                            {% else %}
                                <img src="/images/profil/photo/{{ app.user.profile.photo }}" class="img-fluid" alt="">
                            {% endif %}
                            <h4 id="userName" data-username="{{ app.user.profile.lastname }}" class="text-center">{{ app.user.profile.lastname|capitalize }}</h4>
                        </div>
                        <hr>

                        <ul class="users">
                            {% for user in users %}
                                <li><a data-user={{ user.id }} href='{{ path('chat_user', {'id': user.id}) }}'><span>{{ user.profile.firstname ?? 'empty'}} </span><div class="badge badge-primary badge-pill"></div></a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9 col-sm-8 chat mt-3">
                    <h3>{{ toUser.profile.firstname }}</h3>
                    <div id="chat" class="box channel" data-to-user-id="{{ toUser.id}}">

                    </div>
                    <div class="box input">
                        <form onsubmit="return senderToUser();" method="post">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-10 col-sm-8">
                                        <input type="text" id="message" data-url="{{ path('sender_user') }}" class="form-control" placeholder="Votre message ...">
                                    </div>
                                    <div class="col-lg-1 col-sm-2">
                                        <button id="sendBtn" class="btn icon" type="submit" ><i class="icon icon ion-ios-arrow-thin-right"></i></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

    </section>




{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/lib/autobahn/autobahn.js"></script>
    <script type="text/javascript" src="/js/wampUser.js"></script>
    <script type="text/javascript" src="/js/sendAjax.js"></script>
    {#<script type="text/javascript" src="/js/websocket.js"></script>#}
{% endblock %}
