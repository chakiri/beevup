

{% form_theme PostForm 'bootstrap_4_layout.html.twig' %}

  {% block body %}
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Publier</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="card-body card-block">
      {% for message in app.flashes('create-post-success') %}
        <div class="alert alert-success">
          {{ message }}
        </div>
      {% endfor %}
      <div class="card-body card-block">
        {{ form_start(PostForm, {'action': path('post_create')}) }}
            <div class="form-group">
              {{ form_row(PostForm.title) }}
            </div>
            <div class="form-group">
              {{ form_row(PostForm.description) }}
            </div>
            <div class="form-group">
              {{ form_row(PostForm.category) }}
            </div>
             
            <div class="form-actions form-group">
              <button type="submit" class="btn btn-success btn-sm">Publier</button>
            </div>
             {{ form_end(PostForm) }}
         </div>

         </div>
  {% endblock %} 