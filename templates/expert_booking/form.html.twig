{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}RDV Experts{% endblock %}

{% block body %}
<div class="main-section">
    <div class="container-bv">
        <div class="main-section-data page-content">
            <div class="row">
                <div class="offset-3 col-lg-6">
                    <div class="main-ws-sec">
                        <div class="product-feed-tab current" id="info-dd">
                            <div class=" page-title sign_in_sec current">
                                {% if edit == true %}
                                    <h3>Modifier mon rendez-vous</h3>
                                {% else %}
                                    <h3>Réserver mon rendez-vous</h3>
                                {% endif %}

                                {{ form_errors(form.description) }}

                                <div class="expertUserId py-3">
                                    <p>Vous souhaitez bénéficier des conseils de
                                        <span class="expertName"><strong>{{ expertMeeting.user.profile.firstname|capitalize }} {{ expertMeeting.user.profile.lastname|capitalize }}</strong></span>
                                        de <span class="expertCompany"><strong>{{ expertMeeting.user.company.name|capitalize }}</strong></span>
                                    </p>
                                    <p class="mt-3">Expertise : <span class="expertExpertise">{{ expertMeeting.expertise }}</span></p>
                                </div>

                                {{ form_start(form)}}
                                    <div class="row">
                                        <div class="col-6 form-group">
                                            {{ form_row(form.way) }}
                                            <div class="company-address d-none"><p>Adresse : <span class="expertAddress"><strong>{{ expertMeeting.address }}</strong></span></p></div>
                                        </div>
                                    </div>

                                    <p>Choisissez votre créneau de <strong>30 minutes</strong> : </p>
                                    {{ form_errors(form.slot) }}

                                    {% include 'expert_booking/calendar/calendar.html.twig' %}

                                    <div class="row">
                                        <div class="col-12 form-group">
                                            <div class="d-none">
                                                {{ form_widget(form.slot) }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-12 form-group required">
                                            {{ form_row(form.description, {'label': 'Quelles sont vos attentes ?', 'attr': {'placeholder': 'J\'ai besoin de conseils pour la gestion d\'entreprise'}}) }}
                                        </div>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn orange-bg">Valider</button>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block modals %}
    {% include 'default/modals/base.html.twig' with {'idModal' : 'confirmExpertBooking'} %}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('collectionPrototype') }}
{% endblock %}