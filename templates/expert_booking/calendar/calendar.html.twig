<div class="container mt-3">
    <div class="row">

        {% for date in dates %}
            <table class="table table-striped width-auto">
                <thead>
                <tr>
                    <th scope="col">{{ date }}</th>
                </tr>
                </thead>
                <tbody>
                {% for key, value in startTimes %}
                    {% if key == date %}
                        {% for time in value %}
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input type="checkbox" id="scales" name="scales" class="form-check-input" value="1"/>
                                        <label class="form-check-label" for="scales">{{ time }}</label>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        {% endfor %}

    </div>
</div>